@inherits AbstractSmartComponent

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            @foreach (var field in Schema.Fields)
            {
                if(!this.model.ContainsKey(field.Name))
                {
                    this.model.Add(field.Name, null);
                }
                switch (field.Type.ToLower())
                {
                    case "string":
                        <MudTextField Converter="@MudBlazorHelper.StringConverter" @bind-Value="model[field.Name]" Label="@field.Label" HelperText="@field.Description" Required="@field.Required" />
                        break;
                    case "integer":
                        <MudTextField Converter="@MudBlazorHelper.StringConverter" @bind-Value="model[field.Name]" Label="@field.Label" HelperText="@field.Description" Required="@field.Required" />
                        break;
                }
            }
            <MudButton OnClick="HandleSubmit" Variant="Variant.Filled" Color="Color.Primary">Submit</MudButton>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Close">OK</MudButton>
    </DialogActions>
</MudDialog>

